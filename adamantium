    # Detectar idioma del sistema desde variables de entorno
    local sys_lang="${LANG:-${LC_ALL:-en_US.UTF-8}}"

    if [[ "$sys_lang" =~ ^es ]]; then
        LANG_CODE="es"
    else
        LANG_CODE="en"
    fi
}

