[Desktop Entry]
Type=Service
X-KDE-ServiceTypes=KonqPopupMenu/Plugin
MimeType=image/jpeg;image/png;image/tiff;image/gif;image/webp;video/mp4;video/x-matroska;video/x-msvideo;video/quicktime;video/webm;audio/mpeg;audio/flac;audio/x-wav;audio/ogg;application/pdf;application/vnd.openxmlformats-officedocument.wordprocessingml.document;application/vnd.openxmlformats-officedocument.spreadsheetml.sheet;application/zip;application/x-7z-compressed;
Actions=clean;preview;batch;
Icon=security-high

X-KDE-Priority=TopLevel
X-KDE-StartupNotify=false

[Desktop Action clean]
Name=Clean Metadata (Adamantium)
Name[es]=Limpiar Metadatos (Adamantium)
Icon=security-high
Exec=bash -c 'TERM_APP=$(kreadconfig5 --file kdeglobals --group General --key TerminalApplication 2>/dev/null || echo konsole); case "$TERM_APP" in kitty) kitty --hold -e adamantium --notify "$0";; alacritty) alacritty --hold -e adamantium --notify "$0";; *) "$TERM_APP" -e bash -c "adamantium --notify \"$0\"; read -p \"Press Enter to close...\"";; esac' %f

[Desktop Action preview]
Name=Preview Metadata (Adamantium)
Name[es]=Vista Previa de Metadatos (Adamantium)
Icon=dialog-information
Exec=bash -c 'TERM_APP=$(kreadconfig5 --file kdeglobals --group General --key TerminalApplication 2>/dev/null || echo konsole); case "$TERM_APP" in kitty) kitty --hold -e adamantium --dry-run "$0";; alacritty) alacritty --hold -e adamantium --dry-run "$0";; *) "$TERM_APP" -e bash -c "adamantium --dry-run \"$0\"; read -p \"Press Enter to close...\"";; esac' %f

[Desktop Action batch]
Name=Clean All Selected (Adamantium)
Name[es]=Limpiar Todos los Seleccionados (Adamantium)
Icon=edit-select-all
Exec=bash -c 'TERM_APP=$(kreadconfig5 --file kdeglobals --group General --key TerminalApplication 2>/dev/null || echo konsole); case "$TERM_APP" in kitty) kitty --hold -e adamantium --batch --no-confirm --notify --pattern "*" "$@";; alacritty) alacritty --hold -e adamantium --batch --no-confirm --notify --pattern "*" "$@";; *) "$TERM_APP" -e bash -c "adamantium --batch --no-confirm --notify --pattern \"*\" \"$@\"; read -p \"Press Enter to close...\"";; esac' _ %F
